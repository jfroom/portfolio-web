<article role="work">
  <header class="detail-title-wrap">
    <div class="work-nav" >
      <div class="btn-group work-nav-group">
        <a href="" class="btn btn-sm btn-primary" ng-click="projectIncrement(-1)"><i class="fa fa-arrow-left"></i></a><a href="" class="btn btn-primary btn-sm" ng-click="projectIncrement(1)"><i class="fa fa-arrow-right"></i></a>
      </div>
    </div>
    <div class="detail-title">
      <h1 class="title"><span class="icon"><img ng-src="{[workCur.thumbIcon]}" src="" alt="" class="icon-img"></span><span class="copy">{[workCur.title]}</span></h1>
    </div>
  </header>

  <div class="detail-media" >
    <div class="detail-item " ng-repeat="item in workCur.detailMedia" ng-switch on="item.type">

      <!-- VIMEO EMBED -->
      <div ng-switch-when="vimeo" class='video-container item-media loading-ani' item-index='{[$index]}'><iframe ng-src='{[item.src]}' id="foo" vimeo-embed="item" vvimeo-embed-src="item.src" frameborder='0' width='1280' height='720' webkitAllowFullScreen mozallowfullscreen allowFullScreen class="vimeo"></iframe></div>

      <!-- YOUTUBE EMBED -->
      <div ng-switch-when="youtube" class='video-container youtube item-media loading-ani' youtube-embed="item"><div id="youtube-player"></div></div>

      <!-- IMAGE EMBED -->
      <div class="item-img-outer item-media loading-ani lead-media" ng-switch-when="image"><img class="item-img"  ng-src="{[item.src]}" alt="" src="" /></div>

      <!-- VIDEO EMBED -->
      <video  ng-switch-when="video"
              jf-video="item" jf-video-id="'video-work-' + $index"
              id="video-id-fpo"
              class="item-video item-media video-js vjs-default-skin vjs-jf-skin"
              >
      </video>
     </div>
  </div>

  <ul class="detail-links" ng-show="workCur.projectLinksArr.length > 0">
    <li ng-repeat="item in workCur.projectLinksArr"><a  href="{[item.href]}" class="btn btn-default btn-sm" target="_blank" angular-bind-html="item.label"></a></li>
  </ul>

  <section class="detail-desc-wrap">
    <div class="detail-desc">
      <div class="detail-post-meta ng-cloak" ng-show="workCur.read_time || workCur.timestamp">
        <span class="detail-read-time ng-cloak" ng-show="workCur.read_time">
          <i class="fa fa-bookmark"></i> {[workCur.read_time]} min read
        </span>
        <span class="detail-timestamp ng-cloak" ng-show="workCur.timestamp" >
          <i class="fa fa-calendar"></i> <span><time pubdate="{[workCur.timestamp]}">{[workCur.timestamp | amDateFormat:'YYYY MMMM Do']}</time></span>
        </span>
      </div>

      <div>
        <div class="description" angular-bind-html="workCur.descProcessed"></div>
      </div>

      <div class="press" ng-show="workCur.pressArr">
          <h3><i class="icon-megaphone icon"></i>Press</h3>
          <ul>
            <li ng-repeat="item in workCur.pressArr"><em>{[item.source]}, {[item.date]}</em><div class="indent"><a ng-href="{[item.url]}" target="_blank" href="">{[item.title]}</a></div></li>
          </ul>
      </div>

      <div class="tech">
        {{!-- <h4 class="subheader"><i class="icon-gears icon"></i> Technologies</h4> --}}
        <div class="tech-icons logo-list" ng-show="workCur.techProcessedArr.length > 0">
          <a ng-repeat="item in workCur.techProcessedArr" href="" ng-href="{[item.url]}" target="_blank"><span class="sprite tech-{[item.id]}" util-hover="pulse animated"></span></a>
        </div>
      </div>

      <div class="detail-sub-info" ng-show="workCur.teamProcessedArr">
        <div class="team">
            <h4 class="title"><i class="icon-user icon"></i> Humans</h4>

            <ul class="list">
                <li ng-repeat="item in workCur.teamProcessedArr"><em><span angular-bind-html="item.role" class="role"></span></em><br/>
                  <div angular-bind-html="item.humans" class="indent"></div></li>
            </ul>
          </div>
      </div>

    </div>


  </section>
</article>
